<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="Dustbuster.Views.ProductPage">
  <StackLayout Spacing="0">
    <ContentView BackgroundColor="#18b750"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
    <Grid Padding="20, 10, 0, 0">
      <Label Text= "Product Options"
              TextColor="#ffffff"
              Grid.Row="0"
              WidthRequest="120"
              HorizontalOptions="Start"> 
        <Label.GestureRecognizers>
          <TapGestureRecognizer Tapped="TapProductButton"
                                NumberOfTapsRequired="1" />
        </Label.GestureRecognizers>
      </Label>
      <StackLayout>
        <Image x:Name="btnCalendar"
               Source="button_calendar_add.png"
                Grid.Row="0"
                WidthRequest="70"
                HeightRequest="25"
                HorizontalOptions="End">
          <Image.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapCalandarButton"
                                  NumberOfTapsRequired="1" />
          </Image.GestureRecognizers>
        </Image>
        </StackLayout>
      <Label x:Name="productTitle"
             Text="Product"
              TextColor="#ffffff"
              FontSize="Large"
              Grid.Row="1"
              WidthRequest="100"
              HorizontalOptions="Center"/>
    </Grid>
    </ContentView>
    <ContentView VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
      Padding="0">
    <RelativeLayout x:Name="CarouselView"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="FillAndExpand"
      Padding="0">
      <!--<StackLayout Padding="70, 40, 70, 40">-->
      <!-- So we need to move Rebecas stuff into here! (carousel)-->
        
      <!--</StackLayout>-->
    </RelativeLayout>
    </ContentView>
    <ContentView BackgroundColor="#ffffff"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
      <StackLayout Padding="50, 20, 50, 0">
        <Label Text="Description of why this is the best option for you"
                TextColor="Black"/>
        <Label Text="You will need X amount"
                TextColor="Black"/>
        <Label Text="You will need to apply this Y amount of times"
                TextColor="Black"/>
        <Label Text="The application rate is Z"
                TextColor="Black"/>
      </StackLayout>
    </ContentView>
    <ContentView BackgroundColor="#ffffff"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
      <StackLayout Padding="80, 0, 80, 0">
        <Button Text="Call Us Now"
                BackgroundColor="#18b750"
                TextColor="White"
                Clicked="Button_CallNow"/>
        <Button Text="Request Contact"
                TextColor="#18b750"
                BorderRadius="1"
                BorderWidth="3"
                BorderColor="#18b750"
                BackgroundColor="White"
                Clicked="Button_RequestCall"/>
      </StackLayout>
    </ContentView>
  </StackLayout>
</ContentPage>