<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="Dustbuster.Views.ProductPage">
  <StackLayout Spacing="0">
    
    <!-- Header section -->
    <ContentView BackgroundColor="#18b750"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
      <Grid Padding="20, 10, 0, 10">
        <Label Text= "&lt; Product Options"
                TextColor="#ffffff"
                Grid.Row="0"
                WidthRequest="120"
                HorizontalOptions="Start"> 
          <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapProductButton"
                                  NumberOfTapsRequired="1" />
          </Label.GestureRecognizers>
        </Label>
        <StackLayout>
          <Image x:Name="btnCalendar"
                 Source="button_calendar_add.png"
                  Grid.Row="0"
                  WidthRequest="70"
                  HeightRequest="25"
                  HorizontalOptions="End">
            <Image.GestureRecognizers>
              <TapGestureRecognizer Tapped="TapCalandarButton"
                                    NumberOfTapsRequired="1" />
            </Image.GestureRecognizers>
          </Image>
        </StackLayout>
      </Grid>
    </ContentView>
    
    
    <!-- Carousel View -->
    <ContentView VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand">
      <RelativeLayout x:Name="CarouselView"
                      VerticalOptions="FillAndExpand"
                      HorizontalOptions="FillAndExpand">
      </RelativeLayout>
    </ContentView>
    
    
    <!-- Buttons Call Us Now and Request contact -->
    <ContentView BackgroundColor="#ffffff"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
      <StackLayout Padding="80, 20, 80, 20">
        <Button Text="Call Us Now"
                BackgroundColor="#18b750"
                TextColor="White"
                BorderRadius="3"
                HeightRequest="50"
                WidthRequest="175" />
        <Button Text="Request Contact"
                BackgroundColor="Transparent"
                TextColor="#18b750"
                BorderColor="#18b750"
                BorderRadius="3"
                BorderWidth="2"
                HeightRequest="50"
                WidthRequest="175" />
      </StackLayout>
    </ContentView>
  </StackLayout>
</ContentPage>