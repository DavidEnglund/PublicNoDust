<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="Dustbuster.Views.ProductPage">
  <StackLayout Spacing="0">
    
    <!-- Header section -->
    <ContentView BackgroundColor="#18b750"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
      <Grid Padding="20, 10, 0, 10">
        <Label Text= "Product Options"
                TextColor="#ffffff"
                Grid.Row="0"
                WidthRequest="120"
                HorizontalOptions="Start"> 
          <Label.GestureRecognizers>
            <TapGestureRecognizer Tapped="TapProductButton"
                                  NumberOfTapsRequired="1" />
          </Label.GestureRecognizers>
        </Label>
        <StackLayout>
          <Image x:Name="btnCalendar"
                 Source="button_calendar_add.png"
                  Grid.Row="0"
                  WidthRequest="70"
                  HeightRequest="25"
                  HorizontalOptions="End">
            <Image.GestureRecognizers>
              <TapGestureRecognizer Tapped="TapCalandarButton"
                                    NumberOfTapsRequired="1" />
            </Image.GestureRecognizers>
          </Image>
        </StackLayout>
        <Label x:Name="lblProductTitle"
               Text="Product"
                TextColor="#ffffff"
                FontSize="Large"
               FontAttributes="Bold"
                Grid.Row="1"
                WidthRequest="100"
                HorizontalOptions="Center"/>
      </Grid>
    </ContentView>
    
    <!-- Carousel View -->
    <ContentView VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand">
      <RelativeLayout x:Name="CarouselView"
                      VerticalOptions="FillAndExpand"
                      HorizontalOptions="FillAndExpand">
      </RelativeLayout>
    </ContentView>
    
    <!-- Product Description -->
    <ContentView BackgroundColor="#ffffff"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
      <StackLayout Padding="50, 20, 50, 0">
        <Label x:Name="lblDescription" x:FieldModifier="public" Text="Description of why this is the best option for you"
                TextColor="Black"/>
        <Label x:Name="lblQuantity" Text="You will need X amount"
                TextColor="Black"/>
        <Label x:Name="lblApplication" Text="You will need to apply this Y amount of times"
                TextColor="Black"/>
        <Label x:Name="lblRate" Text="The application rate is Z"
                TextColor="Black"/>
      </StackLayout>
    </ContentView>
    
    <!-- Buttons Call now and Request contact -->
    <ContentView BackgroundColor="#ffffff"
                  VerticalOptions="FillAndExpand"
                  HorizontalOptions="FillAndExpand">
      <StackLayout Padding="80, 20, 80, 20">
        <Button Text="Call Us Now"
                BackgroundColor="#18b750"
                TextColor="White"
                BorderRadius="3"
                HeightRequest="50"
                WidthRequest="175" />
        <Button Text="Request Contact"
                BackgroundColor="Transparent"
                TextColor="#18b750"
                BorderColor="#18b750"
                BorderRadius="3"
                BorderWidth="2"
                HeightRequest="50"
                WidthRequest="175" />
      
        <!--<Button Text="Call Us Now"
                BackgroundColor="#18b750"
                TextColor="White"
                Clicked="Button_CallNow"/>
        <Button Text="Request Contact"
                TextColor="#18b750"
                BorderRadius="3"
                BorderWidth="2"
                BorderColor="#18b750"
                BackgroundColor="White"
                Clicked="Button_RequestCall"/>-->
      </StackLayout>
    </ContentView>
  </StackLayout>
</ContentPage>